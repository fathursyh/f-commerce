---
import MainLayout from "src/layouts/MainLayout.astro";
---

<MainLayout>
  <!-- Profile Container -->
  <div class="container mx-auto mt-10 px-4 md:min-h-[77vh]">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Profile Sidebar -->
      <div class="bg-base rounded-xl shadow-lg p-6">
        <div class="text-center">
          <img
            src="https://d1bpj0tv6vfxyp.cloudfront.net/articles/25760_5-1-2021_14-46-39.webp"
            class="w-36 h-36 object-cover rounded-full mx-auto mb-2"
          />

          <h2 class="text-xl font-semibold text-gray-800">Emma Johnson</h2>
          <p class="text-gray-500 mb-4">emma.johnson@email.com</p>

          <div class="space-y-3">
            <button
              class="w-full bg-indigo-500 text-white py-2 rounded-lg hover:bg-indigo-600 transition"
            >
              Edit Profile
            </button>
            <button
              class="w-full bg-gray-100 text-gray-700 py-2 rounded-lg hover:bg-gray-200 transition"
            >
              Change Password
            </button>
          </div>
        </div>

        <div class="mt-6 border-t pt-4">
          <h3 class="text-lg font-semibold mb-3">Quick Stats</h3>
          <div class="grid grid-cols-3 gap-2 text-center">
            <div>
              <p class="text-xl font-bold text-indigo-600">5</p>
              <p class="text-xs text-gray-500">Orders</p>
            </div>
            <div>
              <p class="text-xl font-bold text-indigo-600">$1,245</p>
              <p class="text-xs text-gray-500">Spent</p>
            </div>
            <div>
              <p class="text-xl font-bold text-indigo-600">3</p>
              <p class="text-xs text-gray-500">Wishlist</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="md:col-span-2 space-y-6">
        <!-- Recent Orders -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h2 class="text-xl font-semibold mb-4 text-gray-800">
            Recent Orders
          </h2>
          <div class="space-y-4">
            <div
              class="flex justify-between items-center bg-gray-50 p-4 rounded-lg"
            >
              <div>
                <p class="font-semibold">#Order 12345</p>
                <p class="text-sm text-gray-500">September 15, 2023</p>
              </div>
              <div class="text-right">
                <p class="font-bold text-indigo-600">$129.99</p>
                <span
                  class="text-sm bg-green-100 text-green-600 px-2 py-1 rounded-full"
                  >Delivered</span
                >
              </div>
            </div>
            <div
              class="flex justify-between items-center bg-gray-50 p-4 rounded-lg"
            >
              <div>
                <p class="font-semibold">#Order 12346</p>
                <p class="text-sm text-gray-500">August 22, 2023</p>
              </div>
              <div class="text-right">
                <p class="font-bold text-indigo-600">$79.50</p>
                <span
                  class="text-sm bg-yellow-100 text-yellow-600 px-2 py-1 rounded-full"
                  >Processing</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Saved Items -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h2 class="text-xl font-semibold mb-4 text-gray-800">Saved Items</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <img
                class="w-full h-32 object-cover rounded mb-3"
              />
              <p class="font-semibold">Leather Jacket</p>
              <p class="text-indigo-600 font-bold">$129.99</p>
              <button
                class="mt-2 w-full bg-indigo-500 text-white py-2 rounded hover:bg-indigo-600"
              >
                Add to Cart
              </button>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <img
                class="w-full h-32 object-cover rounded mb-3"
              />
              <p class="font-semibold">Sneakers</p>
              <p class="text-indigo-600 font-bold">$89.99</p>
              <button
                class="mt-2 w-full bg-indigo-500 text-white py-2 rounded hover:bg-indigo-600"
              >
                Add to Cart
              </button>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 text-center">
              <img
                class="w-full h-32 object-cover rounded mb-3"
              />
              <p class="font-semibold">Watch</p>
              <p class="text-indigo-600 font-bold">$199.99</p>
              <button
                class="mt-2 w-full bg-indigo-500 text-white py-2 rounded hover:bg-indigo-600"
              >
                Add to Cart
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
